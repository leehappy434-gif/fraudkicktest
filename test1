    <!-- ç°¡å–®ç‰ˆï¼šå…¨ç«™æœå°‹ï¼Œåªä¿‚ filter æ–‡å­—å€å¡Šï¼ˆranking / feature / å ±æ–™èªªæ˜ç­‰ï¼‰ -->
    <script>
        const globalInput = document.getElementById('globalSearchInput');
        const pageRoot   = document.getElementById('pageRoot');

        function applyGlobalSearch(keyword) {
            const k = keyword.trim().toLowerCase();

            // ç°¡å–®åšæ³•ï¼šå¦‚æœæœ‰ keywordï¼Œå°±æŠŠå””ç›¸é—œæ®µè½éš±è—ï¼›å†‡å°±å…¨éƒ¨é¡¯ç¤º
            const blocks = pageRoot.querySelectorAll('h2, .feature, .ranking-item, .report-section, .ranking, .buttons, .subtitle, .ranking-item p, .feature p');

            blocks.forEach(el => {
                const text = el.innerText.toLowerCase();
                el.style.display = (!k || text.includes(k)) ? '' : 'none';
            });
        }

        globalInput.addEventListener('input', (e) => {
            applyGlobalSearch(e.target.value);
        });
    </script>
